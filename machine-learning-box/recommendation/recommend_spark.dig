_export:
  !include : config/params.yml
  td:
    database: ${target}
    engine: hive

+train_and_predict:
  py>: py_scripts.recommend.spark_als
  database: ${target}
  source_table: "ratings"
  target_table: "recommendation_als"
  item_size: ${k}
  docker:
    image: "armtd/td-ml:2019.09"
  _env:
    TD_API_KEY: ${secret:td.apikey}
    TD_API_SERVER: ${secret:td.apiserver}
